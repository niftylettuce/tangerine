{
  "apps": [
    {
      "name": "web",
      "script": "web.js",
      "env_production": {
        "NODE_ENV": "production",
        "WEB_PORT": "7003",
        "WEBSOCKET_PORT": "8003"
      }
    },
    {
      "name": "stream",
      "script": "stream.js",
      "env_production": {
        "NODE_ENV": "production",
        "WEBSOCKET_PORT": "8003",
        "STREAM_PORT": "9003"
      }
    }
    {
      "name": "video",
      "script": "ffmpeg.js",
      "env_production": {
        "NODE_ENV": "production",
        "VIDEO_INPUT": "/dev/video0",
        "AUDIO_INPUT": "hw:CARD=C920,DEV=0",
        "STREAM_PORT": "9003"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": [ "alpha-deploy" ],
      "ref": "origin/master",
      "repo": "git@github.com:niftylettuce/tangerine.git",
      "path": "/var/www/production",
      "post-deploy":
        "yarn && pm2 startOrGracefulReload ecosystem-2.json --env production"
    }
  }
}
